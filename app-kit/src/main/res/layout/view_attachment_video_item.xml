<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attachment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/attachment_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="12dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_image_24px"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_play_circle_outline_24dp"/>

    <ImageView
        android:id="@+id/attachment_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/attachment_image"
        android:layout_alignTop="@+id/attachment_image"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-10dp"
        android:src="@drawable/ic_cancel_24px"/>

</RelativeLayout>