<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <ImageView
            android:id="@+id/device_image"
            android:tint="@color/material_color_grey_500"
            android:src="@drawable/appkit__ic_android_phone_black_24px"
            android:layout_width="@dimen/material_list_avatar_size"
            android:layout_alignParentStart="true"
            android:layout_height="@dimen/material_list_avatar_size"
            android:layout_margin="@dimen/material_list_avatar_margin_start"/>

    <ImageView
            android:id="@+id/checkmark"
            android:src="@drawable/appkit__ic_done_black_24px"
            android:tint="@color/colorAccent"
            android:layout_width="@dimen/material_list_icon_size"
            android:layout_height="@dimen/material_list_icon_size"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/material_list_icon_last_position_margin_horizontal"
            android:layout_marginEnd="@dimen/material_list_icon_last_position_margin_horizontal"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/device_image"
            android:layout_toStartOf="@id/checkmark"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/title"
                android:textSize="@dimen/material_list_normal_primary_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="MJ"/>

        <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Micheal Jackson"/>

    </LinearLayout>


</RelativeLayout>