<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="64dp"
    android:orientation="horizontal">

    <media.pixi.appkit.ui.ClusterLayout
        android:id="@+id/item_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:paddingStart="6dp"
                android:paddingEnd="12dp"
                android:textSize="@dimen/material_list_normal_secondary_text_size"
                tools:text="11:11" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/time"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingStart="12dp"
                android:paddingEnd="6dp"
                android:textSize="@dimen/material_list_normal_primary_text_size"
                android:textColor="@android:color/black"
                tools:text="Micheal Jackson" />

        </RelativeLayout>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:textSize="@dimen/material_list_normal_secondary_text_size"
            tools:text="Hey man wazzup" />

    </LinearLayout>
</LinearLayout>