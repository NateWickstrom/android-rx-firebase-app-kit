<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="ProfileKitAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorPrimaryDark</item>
    </style>

    <style name="ProfileKitAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProfileKitAppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="ProfileKitAppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light" />

</resources>